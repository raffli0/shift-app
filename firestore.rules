rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Allow users to read/write their own doc, OR admins to read/write any doc
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Leave Requests: Admins read all, Users read own. Auth users can create/update.
    match /leave_requests/{docId} {
      allow read: if request.auth != null && (isAdmin() || resource.data.user_id == request.auth.uid || request.auth.uid == docId);
      allow write: if request.auth != null;
    }

    // Attendance: Admins read all, Users read own. Auth users can create/update.
    match /attendance/{docId} {
      allow read: if request.auth != null && (isAdmin() || resource.data.user_id == request.auth.uid);
      allow write: if request.auth != null;
    }

    // Companies: Public read (for auth/register lookup), Auth create.
    match /companies/{companyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && isAdmin();
    }

    // Settings (Office Config): Auth users can read, Admins can write.
    match /settings/{companyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
